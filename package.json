{
  "name": "cmdgen",
  "version": "1.5.0",
  "description": "Your Intelligent Command-Line Assistant",
  "license": "MIT",
  "author": "Amirhossein Yavari",
  "main": "server.js",
  "bin": {
    "cmdgen": "./cmdgen-cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm install && npm run build",
    "pkg:linux": "pkg . --targets latest-linux-x64 --output dist/cmdgen-linux",
    "pkg:win": "pkg . --targets latest-win-x64 --output dist/cmdgen-win.exe",
    "pkg:macos": "pkg . --targets latest-macos-x64 --output dist/cmdgen-macos",
    "release": "npm run pkg:linux && npm run pkg:win && npm run pkg:macos"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "node-fetch": "^2.6.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "client/build/**/*"
    ]
  }
}
