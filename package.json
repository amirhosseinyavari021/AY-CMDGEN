{
  "name": "ay-cmdgen",
  "version": "1.5.0",
  "description": "Your Intelligent Command-Line Assistant",
  "license": "(MIT OR Apache-2.0)",
  "author": "Amirhossein Yavari",
  "main": "cmdgen-cli.js",
  "bin": {
    "cmdgen": "./cmdgen-cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm install && cross-env REACT_APP_VERSION=$npm_package_version npm run build",
    "pkg:linux": "pkg . --targets latest-linux-x64 --output dist/cmdgen-linux",
    "pkg:win": "pkg . --targets latest-win-x64 --output dist/cmdgen-win.exe",
    "pkg:macos": "pkg . --targets latest-macos-x64 --output dist/cmdgen-macos",
    "release": "npm run build && npm run pkg:linux && npm run pkg:win && npm run pkg:macos"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "node-fetch": "^2.6.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "cmdgen-cli.js",
      "server.js",
      "apiService-cli.js",
      "responseParser-cli.js",
      "node_modules/axios/dist/node/axios.cjs"
    ],
    "assets": [
      "client/build/**/*",
      "node_modules/axios/dist/**/*"
    ]
  }
}
